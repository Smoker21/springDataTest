	<bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource">
		<property name="driverClass" value="org.apache.derby.jdbc.EmbeddedDriver"></property>
		<property name="jdbcUrl" value="jdbc:derby:C:\Users\Lance\MyDB;create=true"></property>
	</bean>

	<jdbc:embedded-database id="embDataSource" type="DERBY">
	</jdbc:embedded-database>

	<jdbc:embedded-database id="dataSource">
		<jdbc:script location="classpath:schema.sql" />
		<jdbc:script location="classpath:test-data.sql" />
	</jdbc:embedded-database>



</beans>
